<% include ../partials/header %>

	<div class="container">
		<header class="jumbotron text-center">
			<h1>Welcome to YelpCamp</h1>
			<p>See the best campgrounds from around the world</p>
			<p>
				<a class="btn btn-success btn-large" href="campgrounds/new">Add a Campground!</a>
			</p>
		</header>

		<div class="row text-center" style="display: flex; flex-wrap: wrap;">
			<% campgrounds.forEach(function(campground) { %>		
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
						<img src="<%= campground.image %>" alt="Images of Campgrounds">
						<div class="caption">
							<h4><%= campground.name %></h4>
						</div><!-- .caption -->
						<p><a href="campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a></p>
					</div><!-- .thumbnail -->	
				</div><!-- .col-md-3 .col-sm-6 -->				
			<% }); %>
		</div><!-- loop .row -->	
	</div><!-- .container -->

<% include ../partials/footer %>


